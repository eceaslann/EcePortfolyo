@model YeniProje.Models.TblContact
@{
    Layout = "~/Views/Shared/_DefaultLayout.cshtml" 
                ;
}
    <!--header-->
    <section class="w3l-about-breadcrumb text-center">
        <div class="breadcrumb-bg breadcrumb-bg-about py-5">
            <div class="container py-lg-5 mt-5">
                <div class="banner-info-grid mt-5">
                    <h2 class="w3l-title-breadcrumb">Bana Ulaşın!</h2>
                </div>
                <ul class="breadcrumbs-custom-path">
                    <li><a href="#url">Ev</a></li>
                    <li class="active"><span class="fa fa-angle-right mx-2" aria-hidden="true"></span>İletişim</li>
                </ul>
            </div>
        </div>
    </section>
    <!-- //contact banner -->
    <!-- contact -->
    <section class="w3l-contacts-12">
        <div class="contact-top pt-5">
            <div class="container py-lg-5 py-2">
                <div class="title-heading-w3 mx-auto text-center mb-sm-5 mb-4">
                    <h3 class="w3l-title-main">Panelden bana ulaşabilirsiniz.</h3>
                </div>
                <div class="d-grid cont-main-top">
                    <!-- contact form -->
                    <div class="contacts12-main">
                        <form method="post" class="main-input">
                            <div class="top-inputs d-grid">
                                <input type="text" placeholder="Adınız Soyadınız" name="w3lName" id="w3lName" required="">
                                <input type="email" name="email" placeholder="Mail" id="w3lSender" required="">
                            </div>
                            @Html.DropDownListFor(x=>x.Subject,(List<SelectListItem>)ViewBag.v,new {@class="form-control"})
                            <textarea placeholder="Mesahınızı buraya yazabilirsiniz" name="Message" id="w3lMessage" required=""></textarea>
                            <div class="text-end">
                                <button type="submit" class="btn btn-primary btn-style">Mesajı Gönder.</button>
                            </div>
                        </form>
                    </div>
                    <!-- //contact form -->
                </div>
            </div>
            <!-- map -->
            <div class="map mt-5">
                <iframe src="https://www.google.com/maps/embed?pb=!1m18!1m12!1m3!1d158857.7281066703!2d-0.24168144921176335!3d51.5287718408761!2m3!1f0!2f0!3f0!3m2!1i1024!2i768!4f13.1!3m3!1m2!1s0x47d8a00baf21de75%3A0x52963a5addd52a99!2sLondon%2C%20UK!5e0!3m2!1sen!2sin!4v1569921526194!5m2!1sen!2sin"
                        frameborder="0" style="border:0;" allowfullscreen=""></iframe>
            </div>
            <!-- //map -->
        </div>
    </section>

